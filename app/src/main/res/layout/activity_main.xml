<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SkyLayout"
    android:padding="1dp"
    android:orientation="vertical"
    android:background="#20242B"
    tools:context="com.revolve44.testanim4.MainActivity">

    <ImageView
        android:id="@+id/ivSun"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:contentDescription="@string/sun"
        android:src="@drawable/sun" />



    <ImageView
        android:id="@+id/ivRoof"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:src="@drawable/roof">

    </ImageView>

    <TextView
        android:id="@+id/Forecast_number"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ivRoof"
        android:layout_alignTop="@id/ivRoof"
        android:layout_alignRight="@id/ivRoof"
        android:layout_alignBottom="@id/ivRoof"
        android:gravity="center"
        android:text="100"
        android:textColor="#B7D8EA"
        android:textSize="70sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:id="@+id/dashboard1"
        android:gravity="bottom"
        android:layout_below="@+id/ivRoof"
        >

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="firstsection"
            android:text="second" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="secondsection"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="thirdsection"
            android:text="to new Activity" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/dashboard1">
        <Button
            android:id="@+id/bsunrise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="sunrise"
            android:text="sunrise" />

        <Button
            android:id="@+id/bsunrise2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="deg45"
            android:text="45 deg" />

        <Button
            android:id="@+id/bsuncenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="deg90"
            android:text="90 deg" />

        <Button
            android:id="@+id/bsunset2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="deg135"
            android:text="135 deg" />

        <Button
            android:id="@+id/bsunset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="sunset"
            android:text="sunset" />

        <Button
            android:id="@+id/test1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="firsttest"
            android:text="test" />

    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="336dp"
        android:layout_height="162dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="42dp" />

</RelativeLayout>

