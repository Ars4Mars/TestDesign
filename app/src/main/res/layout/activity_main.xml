<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"

    tools:context="com.revolve44.testanim4.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/SkyLayout"
        android:padding="1dp"
        android:orientation="vertical"
        android:background="#20242B">



    <ImageView
        android:id="@+id/ivSun"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        android:contentDescription="@string/sun"
        android:src="@drawable/sun" />

    <ImageView
        android:id="@+id/ivCloudLARGE"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"

        android:src="@drawable/clouds" />

    <ImageView
        android:id="@+id/ivCloudLARGE2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"

        android:src="@drawable/clouds" />

    <ImageView
        android:id="@+id/ivCloudLARGE3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"

        android:src="@drawable/clouds" />

    <ImageView
        android:id="@+id/ivCloudLARGE4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"


        android:src="@drawable/clouds" />





    <ImageView
        android:id="@+id/ivRoof"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:src="@drawable/roof">
    </ImageView>


    <ImageView
        android:id="@+id/birds"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="164dp"
        map:srcCompat="@drawable/fan" />

    <TextView
        android:id="@+id/Forecast_number"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ivRoof"
        android:layout_alignTop="@id/ivRoof"
        android:layout_alignRight="@id/ivRoof"
        android:layout_alignBottom="@id/ivRoof"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-5dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="100"
        android:textColor="#B7D8EA"
        android:textSize="70sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="194dp"
            android:text="Watts"
            android:textColor="#3A5061" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="214dp"
            android:text="London"
            android:textColor="#B7D8EA"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="195dp"
            android:text="5"
            android:textColor="#93ADE3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="91dp"
            android:layout_marginTop="225dp"
            android:text="m/s" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="26dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="194dp"
            android:layout_marginEnd="74dp"
            android:tint="@color/MiddleBLue"
            gauge:srcCompat="@drawable/hot2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="27dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="195dp"
            android:layout_marginEnd="31dp"
            android:tint="@color/EndWhite"
            gauge:srcCompat="@drawable/rain1" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="225dp"
            android:layout_marginEnd="20dp"
            android:text="MAX OUTPUT"
            android:shadowRadius="10"
            android:textColor="#B7D8EA"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:id="@+id/dashboard1"
        android:gravity="bottom"
        android:layout_below="@+id/ivRoof"
        >

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="firstsection"
            android:text="second" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="secondsection"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="thirdsection"
            android:text="to new Activity" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/mayuse"
        android:layout_below="@+id/dashboard1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/lamp1"
            android:layout_weight="1">

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tv2"
            android:layout_weight="1">

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kettle1"
            android:layout_weight="1">

        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/oven1"
            android:layout_weight="1">

        </ImageView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/dashboard2"
        android:layout_below="@id/mayuse">
        <Button
            android:id="@+id/bsunrise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="sunrise"
            android:text="sunrise" />

        <Button
            android:id="@+id/bsunrise2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="deg45"
            android:text="45 deg" />

        <Button
            android:id="@+id/bsuncenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="deg90"
            android:text="90 deg" />

        <Button
            android:id="@+id/bsunset2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="deg135"
            android:text="135 deg" />

        <Button
            android:id="@+id/bsunset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="sunset"
            android:text="sunset" />

        <Button
            android:id="@+id/test1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="firsttest"
            android:text="test" />

    </LinearLayout>



    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/dashboard2"
            android:orientation="vertical">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:context=".MapsActivity" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:id="@+id/LOLIK">

        </TextView>



    </FrameLayout>

  </RelativeLayout>


</ScrollView>

